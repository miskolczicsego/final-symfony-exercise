{% extends '@Admin/layout.html.twig' %}
{% block content %}
<h1>Post</h1>

<table>
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ category.id }}</td>
    </tr>
    <tr>
        <th>Title</th>
        <td>{{ category.name}}</td>
    </tr>
    <tr>
        <th>Slug</th>
        <td>{{ category.slug }}</td>
    </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('jobz_admin_category_index') }}">Back to the list</a>
    </li>
    <li>
        <a href="{{ path('jobz_admin_category_edit', {id: category.id}) }}">Edit</a>
    </li>
    <li>
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </li>
</ul>
{% endblock %}