{% extends '@Admin/layout.html.twig' %}
{% block content %}
    <h3>Posts list</h3>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th >Id</th>
            <th class="text-center">Name</th>
            <th class="text-center">Slug</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('jobz_admin_category_show', {id: category.id}) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <ul>
                        <a href="{{ path('jobz_admin_category_show', {id: category.id}) }}" class="btn btn-primary
                        btn-bg">show</a>
                        <a href="{{ path('jobz_admin_category_edit', {id: category.id}) }}"  class="btn btn-success
                        btn-bg">edit</a>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}