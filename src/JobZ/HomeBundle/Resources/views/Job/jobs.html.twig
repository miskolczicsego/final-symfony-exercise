{% extends 'HomeBundle::layout.html.twig' %}

{% block content %}
    {% for category, jobs in lastjobs %}
        <div id="jobs">
            <div class="category_{{ category }}">
                <div class="category">
                    <h1>
                        <a href="../category.html">{{ category }}</a>
                    </h1>
                </div>
                {% for job in jobs %}
                    <table class="jobs">
                        <tbody>
                        <tr class="{% if loop.index%2==0 %}even{% else %}odd{% endif %}">
                            <td class="location">
                               {{ job.location }}
                            </td>
                            <td class="position">
                                <a href="../job.html">{{ job.position }}</a>
                            </td>
                            <td class="company">
                                {{ job.company }}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
{% endblock %}